<%= render partial: 'books/infonew',locals:{book:@book ,user:current_user} %>

<h1>Book deteail</h1>
<% @books.each do |book| %>
<table>
  <tr>
    <td><%= image_tag book.user.get_profile_image(100,100) %></td>
    <td><%= link_to book.title,book_path(book.id) %></td>
    <td><%= book.body %></td>
  </tr>
</table>
<% end %>