<%= render 'books/infonew',book:@book %>
<h1>Book deteail</h1>
<% @books.each do |book| %>
<table>
  <tr>
    <td><%= image_tag'sample-author1.jpg' %></td>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <% #if @book_user == current_user %>
      <td><%= link_to 'edit',edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy",book_path(book.id),method: :delete,"data-confirm"=>"本当に消しますか?" %></td>
    <% #end %>
  </tr>
</table>
<% end %>
