<div class="container px-3 px-sm-0">
  <div class="row">
    <%= render partial: 'books/infonew',locals:{book:@book ,user:@user} %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id)do %>
                <%= image_tag @user.get_profile_image(100,100) %> <br>
                <%= @user.name %>
              <% end %>
            </td>
            <td><%= link_to @booka.title,book_path(@booka.id) %></td>
            <td><%= @booka.body %></td>
            <% if @booka.user == current_user %>
              <td><%= link_to 'Edit',edit_book_path(@booka.id),class:"btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy",book_path(@booka.id),method: :delete,"data-confirm"=>"本当に消しますか?" ,class:"btn btn-sm btn-danger"%></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>