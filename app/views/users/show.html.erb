<%= render partial: 'books/infonew',locals:{book:@book ,user:@user} %>
<h1>Books</h1>
  <table>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <tr>
      <% @books.each do |book| %>
      <td><%= image_tag book.user.get_profile_image(100,100) %></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <% if book.user == current_user %>
      <td><%= link_to 'edit',edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy",book_path(book.id),method: :delete,"data-confirm"=>"本当に消しますか?" %></td>
      <% end %>
    </tr>
  </table>

<% end %>

