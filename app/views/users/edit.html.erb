<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>User info</h1>
<%= form_with model:@user do |f| %>
<div>
  <label for="inputName">Name</label><br>
  <%= f.text_field:name %><br>
  <label for="inputImage">Image</label><br>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
  <label for="inputIntroduction">Introduction</label><br>
  <%= f.text_area:introduction %><br>
  <%= f.submit 'Update User' %>
</div>

<% end %>
